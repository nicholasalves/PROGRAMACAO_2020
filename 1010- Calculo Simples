#include <stdio.h>
 
int main() {
    int peca1, peca2, n2, n1; 
    double valor1, valor2, VALORTOTAL;
    scanf("%d %d %lf", &peca1, &n1, &valor1);
    scanf("%d %d %lf", &peca2, &n2, &valor2);
        VALORTOTAL=(n1 * valor1) + (n2 * valor2);
          printf("VALOR A PAGAR: R$ %.2lf\n", VALORTOTAL);
    return 0;
}
